@model Aprendizado.Models.ClienteModel

@{
    ViewBag.Title = "Cadastrar Cliente";
    Layout = "~/Views/Shared/_LayoutSecond.cshtml";
}

<h2>Cadastrar Cliente</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente Model</legend>

        <div class="editor-label">
            @Html.LabelFor(m => m.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.Nome)
            @Html.ValidationMessageFor(m => m.Nome)
        </div>


        <div class="editor-label">
            @Html.LabelFor(m => m.SobreNome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.SobreNome)
            @Html.ValidationMessageFor(m => m.SobreNome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Telefone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.Telefone)
            @Html.ValidationMessageFor(m => m.Telefone)
        </div>
        <p>
            <input value="Cadastrar" type="submit">
        </p>
    </fieldset>


}
<div>
    @Html.ActionLink("Back to List", "Cadastrar")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
